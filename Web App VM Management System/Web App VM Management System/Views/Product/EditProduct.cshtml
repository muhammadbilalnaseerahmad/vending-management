@model Web_App_VM_Management_System.Entities.Product
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Product</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h4 class="mt-3">Update VendigMachine</h4>
        <hr />
        <div class="col-md-6">
            <form method="post" action="/Product/EditProduct">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input value="@Model.Name" name="Name" type="text" id="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <input value="@Model.Description" name="Description" type="text" id="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input value="@Math.Round(Model.Price, 1)" name="Price" type="number" step="0.01" id="Price" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="StockQuantity">Stock Quantity</label>
                    <input value="@Model.StockQuantity" name="StockQuantity" type="number" id="StockQuantity" class="form-control" />
                </div>
                @*<div class="form-group">
                    <label for="Category">Category</label>
                    <select name="Catagoryid" id="Category" class="form-control">
                        <!-- Options for categories go here -->
